<script>
  document.addEventListener('DOMContentLoaded', function() {
    const wordsString = '{{section.settings.typingWord}}'
    let words = wordsString.split(',');
    words.push("")
    let reverse = false;
    let index = 0;
    let indexLetters = 0
    let wordLength = words[index].length
    let currentWord = ""
    let time = 300
    function fadeWord(elementId) {
      if(reverse==true){
      currentWord = currentWord.slice(0, -1)
      } else {
      currentWord += words[index][indexLetters]
      }
      const gutWordElement = document.getElementById(elementId);
      gutWordElement.textContent = currentWord ;
      gutWordElement.style.opacity = 1;  /* Show the new word */
      if((indexLetters+1)==wordLength){
        time = 1500
        indexLetters--;
        reverse=true
      } else {
        time=230
      }
      setTimeout(function() {
         gutWordElement.style.opacity = 0;
          if(reverse){
            if(indexLetters==-1){
              reverse=false
              index++;
              currentWord=""
              indexLetters++;
              wordLength = words[index].length
            } else {
              indexLetters--;
            }
            if ((index+1) == words.length) {
              index = 0;
              wordLength = words[index].length
              indexLetters = 0
              currentWord=""
            }
          }else{
            indexLetters++;
            if(wordLength == (indexLetters)){
            indexLetters--;

            }
          }
          fadeWord(elementId); /* Show the next word */
      }, time); /* Display the word for 1 second */
    }

    // Start the loop for each rotating word element
    const rotatingWordElements = document.querySelectorAll('.rotating-word');
    rotatingWordElements.forEach((element) => {
      fadeWord(element.id);
    });
  });
</script>

