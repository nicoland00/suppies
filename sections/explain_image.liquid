{{ 'section-explain-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .explain-image-wrapper {
    display: flex;
    justify-content: center;
    width: 100%;
    padding-top: 0px;
    padding-bottom: 20px;
  }

  .explain-image {
    width: 45%; /* Image will be 70% of the screen width */
    max-width: 100%;
    height: auto;
    object-fit: cover;
  }

  @media screen and (max-width: 750px) {
    .explain-image {
      width: 95%; /* On mobile, the image will take 100% width */
    }
  }
{%- endstyle -%}

<div class="explain-image-wrapper color-{{ section.settings.color_scheme }}">
  <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.alt_text }}" class="explain-image" >
</div>

{% schema %}
{
  "name": "Explain Image",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "alt_text",
      "label": "Alt Text",
      "default": "Image description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-8"
    }
  ],
  "presets": [
    {
      "name": "Explain Image",
      "category": "Image"
    }
  ]
}
{% endschema %}
